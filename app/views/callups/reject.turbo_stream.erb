<turbo-stream action="update" target="callup-feedback">
  <template>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-times-circle me-2"></i>
      Has rechazado la convocatoria
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="callup-status-<%= @callup.user.id %>">
  <template>
    <span class="badge bg-danger fs-6">
      <i class="fas fa-times me-1"></i>Rechazado
    </span>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="callup-btn-<%= @callup.user.id %>">
  <template>
    <button class="btn btn-sm btn-outline-primary" disabled>
      <i class="fas fa-redo me-1"></i>Reenviar
    </button>
  </template>
</turbo-stream> 