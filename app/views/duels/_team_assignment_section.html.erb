<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <% if duel.home_team.present? %>
      <h5 class="mb-0"><%= duel.home_team.name %></h5>
      <span class="badge bg-primary"><%= duel.home_players.count %>/<%= duel.duel_type %> jugadores</span>
    <% else %>
      <h5 class="mb-0 text-muted">Equipo no asignado</h5>
      <span class="badge bg-secondary">Sin equipo</span>
    <% end %>
  </div>
  <div class="card-body">
    <% if duel.home_team.present? %>
      <% if duel.home_players.any? %>
        <div class="list-group">
          <% duel.home_players.each do |player| %>
            <div class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <%= player.firstname%>
                <% if player == duel.home_team.captain %>
                  <span class="badge bg-info">Capit√°n</span>
                <% end %>
              </div>
              <% if duel.ongoing? %>
                <%= button_to "Gol", add_goal_duel_path(duel, team_id: duel.home_team.id, user_id: player.id), 
                    method: :post, class: "btn btn-sm btn-success" %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-4">
          <i class="fas fa-users fa-3x text-muted mb-3"></i>
          <h6 class="text-muted">No hay jugadores confirmados</h6>
          <p class="text-muted small">Convocar jugadores para llenar el equipo</p>
          <%= link_to available_players_duel_path(duel), class: "btn btn-primary btn-sm" do %>
            <i class="fas fa-plus me-1"></i>Convocar Jugadores
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-4">
        <i class="fas fa-plus-circle fa-3x text-muted mb-3"></i>
        <h6 class="text-muted">Asigna un equipo</h6>
        <p class="text-muted small">Crea un equipo temporal para este duelo</p>
        <%= button_to create_temporary_team_duel_path(duel), 
            method: :post, 
            class: "btn btn-primary btn-sm",
            data: { turbo: true } do %>
          <i class="fas fa-plus me-1"></i>Asignar Equipo
        <% end %>
      </div>
    <% end %>
  </div>
</div>

 