<% if params[:quick].present? && turbo_frame_request? %>
  <%= render "quick_modal" %>
<% else %>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h2 class="mb-0">Crear Nueva Arena</h2>
          </div>
          <div class="card-body">
            <%= render "form", arena: @arena %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
