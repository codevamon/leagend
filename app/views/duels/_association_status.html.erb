<%# Partial para mostrar el estado de asociación del duelo %>
<% if duel.associated_with_club? %>
  <div class="alert alert-primary">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <i class="fas fa-building me-2"></i>
        <strong>Club:</strong> <%= duel.club.name %>
        <% if duel.club_association_pending? %>
          <span class="badge bg-warning">
            <i class="fas fa-clock me-1"></i>Pendiente de aprobación
          </span>
        <% else %>
          <span class="badge bg-success">
            <i class="fas fa-check me-1"></i>Aprobado
          </span>
        <% end %>
      </div>
      <% if duel.club_association_pending? %>
        <small class="text-muted">Esperando respuesta del admin del club</small>
      <% end %>
    </div>
  </div>
<% elsif duel.associated_with_clan? %>
  <div class="alert alert-success">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <i class="fas fa-shield-alt me-2"></i>
        <strong>Clan:</strong> <%= duel.clan.name %>
        <span class="badge bg-success">
          <i class="fas fa-check me-1"></i>Asociado
        </span>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-light">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <i class="fas fa-info-circle me-2"></i>
        <strong>Duelo independiente</strong>
        <span class="badge bg-secondary">
          <i class="fas fa-unlink me-1"></i>Sin asociación
        </span>
      </div>
      <small class="text-muted">No asociado a ningún club o clan</small>
    </div>
  </div>
<% end %> 