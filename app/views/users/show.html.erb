<!-- app/views/users/show.html.erb -->
<h1><%= @user.name %></h1>

<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar, alt: "User Avatar" %>
<% else %>
  <p>No avatar uploaded yet.</p>
<% end %>


<h1><%= @user.name %></h1>
<p>Email: <%= @user.email %></p>

<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]) %>
<% else %>
  <%= image_tag "default_avatar.png", size: "150x150" %>
<% end %>
<!-- Resto de la vista -->