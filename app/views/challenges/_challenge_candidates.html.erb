  <% @desafiables.each do |d| %>
    <div class="card mb-2">
      <div class="card-body">
        <p><b><%= d.home_team.joinable.name %> -</b> <%= d.duel_type.capitalize %> Duel â€” inicia <%= l(d.starts_at, format: :short) %></p>
